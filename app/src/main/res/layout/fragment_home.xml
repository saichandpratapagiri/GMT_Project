<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/no_projects_found"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_projects_found"
            android:textSize="24sp"
            android:visibility="gone"
            android:layout_marginTop="100dp"
            android:textAlignment="center"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/projects_in_funding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/projects_in_funding"
            android:textStyle="bold"
            android:textSize="16sp"
            android:visibility="gone"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="5dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/funding_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:visibility="gone"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            />
        <TextView
            android:id="@+id/projects_in_management"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/projects_in_management"
            android:textStyle="bold"
            android:visibility="gone"
            android:textSize="16sp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="5dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/management_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:visibility="gone"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="65dp"
            />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>